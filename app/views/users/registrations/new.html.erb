<h1 class='fw-bold mb-4'>アカウント登録</h1>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>

  <div class="row gx-2 mb-4">
    <label class='col-md-2 col-form-label text-md-end'><%= f.label :名前 %></label>
    <%= f.text_field :name, autofocus: true, autocomplete: "name", class:'form-control- col-md-6 shadow' %>
  </div>

  <div class="row gx-2 mb-4">
    <label class='col-md-2 col-form-label text-md-end'><%= f.label :email %></label>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:'form-control- col-md-6 shadow' %>
  </div>

  <div class="row gx-2 mb-4">
    <label class='col-md-2 col-form-label text-md-end'>
      <%= f.label :password %>
      <% if @minimum_password_length %>
      （<%= @minimum_password_length %>文字以上）
      <% end %>
    </label>
    <%= f.password_field :password, autocomplete: "new-password", class:'form-control- col-md-6 shadow' %>
  </div>

  <div class="row gx-2 mb-4">
    <label class='col-md-2 col-form-label text-md-end'><%= f.label :password_confirmation %></label>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class:'form-control- col-md-6 shadow' %>
  </div>

  <div class="row gx-2 mb-5">
    <div class='col-8 text-end'>
      <%= f.submit "登録", class: 'btn btn-primary px-3 shadow' %>
    </div>
  </div>
<% end %>
